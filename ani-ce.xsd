            <xs:enumeration value="MDA"></xs:enumeration>
            <xs:enumeration value="TRA"></xs:enumeration>
            <xs:enumeration value="TAM"></xs:enumeration>
            <xs:enumeration value="TAV"></xs:enumeration>
            <xs:enumeration value="MAF"></xs:enumeration>
