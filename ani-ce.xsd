<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://www.elsevier.com/xml/ani/ani" xmlns:ait="http://www.elsevier.com/xml/ani/ait" xmlns:ani="http://www.elsevier.com/xml/ani/ani" xmlns:mml="http://www.w3.org/1998/Math/MathML">

    <xs:import namespace="http://www.w3.org/1998/Math/MathML" schemaLocation="mathml3/mathml3.xsd"/>

    <xs:group name="richstring.data">
        <xs:sequence>
            <xs:choice minOccurs="0">
                <xs:element ref="ani:sup"/>
                <xs:element ref="ani:inf"/>
            </xs:choice>
        </xs:sequence>
    </xs:group>

    <xs:group name="richstringWithMML.data">
        <xs:sequence>
            <xs:choice minOccurs="0">
                <xs:element ref="ani:sup"/>
                <xs:element ref="ani:inf"/>
                <xs:element ref="mml:math"/>
            </xs:choice>
        </xs:sequence>
    </xs:group>

    <xs:element name="sup">
        <xs:complexType mixed="true">
            <xs:group minOccurs="0" maxOccurs="unbounded" ref="ani:richstring.data"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="inf">
        <xs:complexType mixed="true">
            <xs:group minOccurs="0" maxOccurs="unbounded" ref="ani:richstring.data"/>
        </xs:complexType>
    </xs:element>
</xs:schema>
